<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/greennn">

    <RelativeLayout
        android:id="@+id/title_parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/darkGrey"
        android:paddingLeft="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/themeColor"
            android:text="Book Info"
            android:textSize="20sp"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <ImageView
        android:id="@+id/book_Cover"
        android:layout_width="166dp"
        android:layout_height="270dp"
        android:src="@drawable/test_cover"
        android:layout_below="@id/title_parent"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_Cover"
        android:layout_marginTop="10dp"
        android:text="Their Eyes Were Watching God"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zora Hurston"
        android:textColor="@color/author_color"
        android:layout_below="@id/book_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"/>

    <RelativeLayout
        android:id="@+id/status_parent"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_below="@id/author"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/circle"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:backgroundTint="@color/green"
            android:background="@drawable/clear_circle"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Returned"
            android:textSize="25sp"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/green"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_check_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/status" />




    </RelativeLayout>


</RelativeLayout>